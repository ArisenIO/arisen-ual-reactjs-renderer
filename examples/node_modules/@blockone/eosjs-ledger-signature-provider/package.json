{
  "name": "@blockone/eosjs-ledger-signature-provider",
  "version": "0.0.2",
  "description": "A SignatureProvider for communicating with eosjs from a Ledger device.",
  "author": "Block.one",
  "license": "ISC",
  "main": "dist/index.js",
  "scripts": {
    "lint": "tslint -c tslint.json src/*.ts",
    "build": "npm run clean & tsc -p ./tsconfig.json",
    "clean": "rm -rf dist",
    "coverage": "jest --coverage",
    "test": "jest",
    "prepublish": "npm run build",
    "docs": "typedoc --excludePrivate --excludeProtected --out ./docs --theme markdown"
  },
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@ledgerhq/hw-transport": "^4.35.0",
    "@ledgerhq/hw-transport-u2f": "^4.39.0",
    "asn1-ber": "^1.0.9",
    "bip32-path": "^0.4.2",
    "buffer": "^5.2.1",
    "eosjs": "20.0.0-08d2a9b.0",
    "eosjs-ecc": "^4.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@blockone/eslint-config-blockone": "^1.1.1",
    "@blockone/tslint-config-blockone": "^1.0.0",
    "@types/node": "^11.9.4",
    "babel-polyfill": "^6.26.0",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.13.0",
    "typedoc-plugin-markdown": "^1.1.19",
    "typescript": "^3.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(tsx?)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testRegex": "(/src/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  }
}
